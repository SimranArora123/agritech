<%- include('./partials/header') %>

<h1 style="text-align: center;"> Compose A New Blog </h1>
<div class="container">
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">  
            <form action="/company" method="post">
            
                <div class="form-group"> <input class="form-control" type="text" name="Name" placeholder="Name of Company"></div>
                <div class="form-group"> <input class="form-control" type="text" name="Address" placeholder="Address"></div>
                <div class="form-group"> <input class="form-control" type="text" name="img" placeholder="Image of Company"></div>
                <div class="form-group"> <input class="form-control" type="text" name="CompanyType" placeholder="Company Type"></div>
                <div class="form-group"> <input class="form-control" type="text" name="ContractType" placeholder="Contract Type"></div>
                <div class="form-group"> <input class="form-control" type="text" name="Crop" placeholder="Name of Crop"></div>
                <div class="form-group"> <input class="form-control" type="text" name="Price" placeholder="Price offered Per Quintol"></div>
                <div class="form-group"> <input class="form-control" type="text" name="Cin" placeholder="CIN"></div>
                <div class="form-group"> <input class="form-control" type="email" name="email" placeholder="email"></div>
                <div class="form-group"><input class="form-control" type="tel" name="phone" placeholder="phone" ></div>
                <div class="form-group"> <button class="btn btn-lg btn-default btn-block btn-success">submit</button></div>
            </form>
            <!-- pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" -->
        </div>
    </div>
    
</div>

<%- include('./partials/footer') %>